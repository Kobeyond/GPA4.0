<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <TextView
        android:id="@+id/detail_article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="求问此题怎么做"/>
    <LinearLayout
        android:id="@+id/detail_article_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_article_title"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_article_owner_head"

            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/detail_article_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="楼主id"/>
        <ImageView
            android:id="@+id/detail_article_sex"
            android:layout_width="15dp"
            android:layout_height="15dp"

            android:src="@drawable/woman"/>
    </LinearLayout>

    <TextView
        android:id="@+id/detail_article_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="#1"/>
    <TextView
        android:id="@+id/detail_article_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_article_floor"
        android:layout_alignParentRight="true"
        android:text="label"/>
    <TextView
        android:id="@+id/detail_article_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_article_layout"
        android:text="具体内容。。。。。。。。。。。。。。"/>
    <ImageView
        android:id="@+id/detail_article_photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_article_detail"/>

</RelativeLayout>