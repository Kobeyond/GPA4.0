<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">
    <TextView
        android:id="@+id/my_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#FF000000"
        android:text="Title..."/>

    <TextView
        android:id="@+id/my_article_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/my_article_title"
        android:text="time..  label.."/>



    <TextView
        android:id="@+id/my_article_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_article_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:text="count"
        android:layout_alignBottom="@+id/imageView" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_comment_count_24dp"
        android:layout_below="@id/my_article_title"
        android:layout_toLeftOf="@id/my_article_count"
        android:id="@+id/imageView" />

    <TextView
        android:id="@+id/my_article_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/my_article_time_label"
        android:background="#FFDDDDDD"/>

</RelativeLayout>